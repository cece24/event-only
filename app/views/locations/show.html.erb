<h1><%= @location.name %></h1>

<%= link_to 'Edit location', edit_location_path(@location) %> |
<%= link_to 'Delete location', location_path(@location), method: :delete, data: {confirm: "Are you sure you want to delete the location '#{ @location.name}'? This cannot be undone!"} %>

<%= render 'single_location', location: @location, display_location_name: false %>
